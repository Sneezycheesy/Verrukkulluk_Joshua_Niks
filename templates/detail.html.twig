{% extends "main.html.twig" %}

{% block content %}

<h4> Dit is de template {{ title }} </h4>

    <div class="col-md-12">
        <div class="row dish-container">
            <div class="col-md-5">
            {# DISH IMAGE #}
            <img class="dish-detail-image" src="#" />
            </div>
            <div class="col-md-7">
                <div class="row">
                {# ROW FOR PPL PRICE AND CALS#}
                    <div class="col-md-2">
                    {# PPL #}
                    PPL {{ data[0].amount_of_people }}
                    </div>
                    <div class="col-md-2">
                    {# PRICE #}
                    €{{ data[0].price }}
                    </div>
                    <div class="col-md-2">
                    {# CALS #}
                    {{ data[0].calories }}
                    </div>
                    <div class="col-md-6">
                    {# EMPTY SPACE#}
                    </div>
                </div>
                <div class="row dish-detail-title-row">
                    <div class="col-md-5">
                        {# DISH TITLE #}
                        <h3> {{ data[0].title }} </h3>
                    </div>
                    <div class="col-md-2">
                        {# EMPTY SPACE #}
                    </div>
                    <div class="col-md-5 dish-rating">
                        {# RATING #}
                        {% for i in range(1, 5) %}
                            {% if i <= data[0].rating %}
                                <img src="./assets/images/star-rating.png" class="star-rating">
                            {% else %}
                                <img src="./assets/images/star-not-rating.png" class="star-not-rating">
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
                <div class="row dish-long-description">
                    <div class="col-md-12">
                        {# DESCRIPTION #}
                        {{ data[0].long_description }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3 btn dish-detail-button">
                        {# BUTTON "OP LIJST" #}
                        <button>Op Lijst</button>
                    </div>
                    <div class="col-md-7">
                        {# EMPTY SPACE #}
                    </div>
                    <div class="col-md-2">
                        {# TOGGLE FAVOURITE #}
                        <img src="#">
                    </div>
                </div>
            </div>
        </div>
    <div class="row dish-information">
            <div class="col-md-12">
                <nav class="nav nav-tabs">
                    <a class="nav-link active" data-toggle="tab" href="#">Ingrediënten</a>
                    <a class="nav-link" data-toggle="tab" href="#">Bereidingswijze</a>
                    <a class="nav-link" data-toggle="tab" href="#">Opmerkingen</a>
                </nav>
            </div>
        </div>
    </div>
</div>







{% endblock %}