<body>
<div class="container-fluid">

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="carousel slide" data-ride="carousel" id="carousel-804731">
                    <div class="fixed-top" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                        <div class="collapse hidden-navbar" id="navbarToggleExternalContent">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="hidden-navbar-image">
                                        <a href="./"><img src="./assets/img/verrukkulluk-logo.png"></a>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                </div>
                                <div class="col-md-3 hidden-navbar-text">
                                    <a href="?action=favourites">Favorieten</a>
                                </div>
                                <div class="col-md-3 hidden-navbar-text">
                                    <a href="?action=groceries">Mijn Boodschappenlijst</a>
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                    </div>
                    <nav class="navbar navbar-carousel">
                        <div class="col-md-5 navbar-image">
                            <a class="navbar-image" href="./">
                                <img src="./assets/img/verrukkulluk-logo.png" loading="lazy"/>
                            </a>
                        </div>
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-3">
                        <form class="form-inline my-2 my-lg-0 nav-search" id="nav-search-form">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit" id="navigation-search-button">Zoek</button>
                            <input class="form-control mr-sm-2" id="nav-search-input" type="search" placeholder="Zoeken" aria-label="Zoeken" />
                            
                        </form>  
                        </div>
                        <div class="col-md-1">              
                            <button class="navbar-light navbar-toggler navbar-toggle-button" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>
                    </nav>
                    <ol class="carousel-indicators">
                        <li data-slide-to="0" data-target="#carousel-804731" class="active">
                        </li>
                        <li data-slide-to="1" data-target="#carousel-804731">
                        </li>
                        <li data-slide-to="2" data-target="#carousel-804731">
                        </li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" alt="Carousel Bootstrap First" src="./assets/img/verrukkulluk-logo.png" />
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" alt="Carousel Bootstrap Second" src="./assets/img/logo-v2.png" />
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" alt="Carousel Bootstrap Third" src="./assets/img/logo-v2.png" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row main-template-row">
            <div class="col-md-3 agenda-and-login">
                <div class="row agenda">
                    <div class="col-md-12">
                        <div class="row agenda-title">
                            <div class="col-md-12">
                                <img src="./assets/img/verrukkulluk-agenda.png">
                            </div>
                        </div>
                        <div class="row agenda-item">
                            <div class="col-md-12">
                                <i class="fa fa-calendar"></i><i class="agenda-item-text">Agenda Item</i>
                            </div>
                        </div>
                    </div>
                </div>

            <div class="row login">
                <div class="col-md-12 login-column">
                    {% if user_id == 0 %}
                    <div class="row login-image">
                        <div class="col-md-12">
                            <img src="./assets/img/verrukkulluk-login.png" />
                        </div>
                    </div>
                    <form class="login-form" id="login-form">
                        <div class="row login-email-label">
                            <div class="col-md-12">
                                <label>Email</label>
                            </div>
                        </div>
                        <div class="row login-email-input">
                            <div class="col-md-12">
                                <input type="text" placeholder="Email" id="login-email-input"/>
                            </div>
                        </div>
                        <div class="row login-password">
                            <div class="col-md-12">
                                <div class="row login-password-label">
                                    <div class="col-md-12">
                                        <label>Wachtwoord</label>
                                    </div>
                                </div>
                                <div class="row login-password-input">
                                    <div class="col-md-12">
                                        <input type="password" placeholder="wachtwoord" id="login-password-input"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row login-button">
                        <div class="col-md-12">
                            <button id="login-button" type="submit" form="login-form">Login</button>
                        </div>
                    </div>
                    {% else %}
                    <h2>Log uit</h2>
                    <div class="row logout-button" id="logout-button">
                        <div class="col-md-12">
                            <button>Loguit</button>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
       
        <div class="col-md-9">
            {%  block content %}
            {%  endblock %}
        </div>
    </div>


    <div class="row footer">
            <div class="col-md-2 logo-footer">
                <img src="./assets/img/verrukkulluk-pay-off.png" />
            </div>
            <div class="col-md-2 contact-footer">
                <div class="row contact-image-footer">
                    <img src="./assets/img/verrukkulluk-contact.png" />
                </div>
                <div class="row contact-info-footer">
                    <p>
                        Verrukkulluk.nl<br/>
                        Poststraat 2b<br/>
                        Sittard<br/>
                        info@verrukkulluk.nl
                    </p>
                </div>
            </div>
    </div>


</div>
<div id="data" data-data="{{ data|json_encode }}"></div>


