    {#START CONTENT#}{# Agenda and Login on the LEFT side of the page #}
        <div class="col-md-12 dish-grid">
        {% for dish in range(1, 4) %}
            {% if dish % 2 != 0 %}
                <div class="row"> {# CREATE A NEW ROW FOR 2 DISHES WHENEVER AND ODD DISH IS BEING PLACED #}
            <div class="col-md-1">
            </div>
            {% endif %}
                {% set dish_id = dish + ((4 * page_id) - 1) %}
                <div class="col-md-4 dish-block">
                    <div class="row dish-image-row dish-block-row">
                        <div class="col dish-image-col">
                            <img src={{ data[dish_id].image }} />
                        </div>
                    </div>
                    <div class="row dish-block-row">
                        <div class="col-md-7 dish-title">
                           <h5> {{ data[dish_id].title }} </h5>
                        </div>
                        <div class="col-md-5 dish-rating">
                            {% for i in range(1, 5) %}
                                {% if i <= data[dish_id].rating %}
                                    <img src="./assets/images/star-rating.png" />
                                {% else %}
                                    <img src="./assets/images/star-not-rating.png" />
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                    <div class="row dish-block-row">
                        <div class="col">
                            {{ data[dish_id].short_description }}
                        </div>
                    </div>
                    <div class="row dish-block-row">
                        <div class="col-md-4">
                            <a href="?dish_id={{ data[dish_id].ID }}&action=detail"><button class="dish-button">SMULLEN!</button></a>
                        </div>
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-2">
                            ppl {{ data[dish_id].amount_of_people }}
                        </div>
                        <div class="col-md-2">
                            price {{ data[dish_id].price }}
                        </div>
                        <div class="col-md-2">
                            cals {{data[dish_id].calories }}
                        </div>
                    </div>
                </div>
                <div class="col-md-1">
                </div>
            {% if dish % 2 == 0 %} {# CLOSE ROW IF 2 DISHES HAVE BEEN PLACED #}
                {% if dish == 2 %}
                    <div class="row dish-devide-row">
                    </div>
                {% endif %}
                </div>
            {% endif %}
        {% endfor %}
            </div>
        </div>
	<div class="row">
		<div class="col-md-4">
		</div>
		<div class="col-md-8">
			<nav>
				<ul class="pagination-sm pagination pb-sm-5 pb-5 justify-content-end">
                    {% for i in range(1, data|length / 4) %}
                        <li class="page-item">
                            <a class="page-link" href="?page_id={{i}}">{{ i }}</a>
                        </li>
                    {% endfor %}
				</ul>
